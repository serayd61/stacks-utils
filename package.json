{
  "name": "@serayd61/stacks-utils",
  "version": "1.0.0",
  "description": "ðŸ› ï¸ Utility library for Stacks blockchain development - address validation, token formatting, API helpers, and more",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "stacks",
    "blockchain",
    "bitcoin",
    "stx",
    "clarity",
    "web3",
    "defi",
    "crypto",
    "address",
    "validation",
    "utilities"
  ],
  "author": "serayd61",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serayd61/stacks-utils.git"
  },
  "homepage": "https://github.com/serayd61/stacks-utils#readme",
  "bugs": {
    "url": "https://github.com/serayd61/stacks-utils/issues"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.5.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "c32check": "^1.1.3"
  },
  "engines": {
    "node": ">=18"
  }
